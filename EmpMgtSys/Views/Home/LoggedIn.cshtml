@model CYBInfracstructure.DataStructure.Entities.UserAccount

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@*<h2>Login Here</h2>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card">

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <a href="/Account/Login">
                                    <span><img src="~/img/CyberSpace Logo.png" alt="" height="44"></span>
                                </a>
                                <p class="text-muted mb-4 mt-3">Enter your Username and password to have access .</p>
                            </div>

                            <form action="#">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                <div class="form-group mb-3">
                                    <label for="username">Username</label>
                                    @Html.EditorFor(model => model.StaffID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username", @required = "", @id = "username", @type = "name" } })
                                    @Html.ValidationMessageFor(model => model.StaffID, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group mb-3">
                                    <a href="pages-recoverpw.html" class="text-muted float-right"><small></small></a>
                                    <label for="password">Password</label>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Your Password", @required = "", @id = "password", @type = "password" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>

                                @*<div class="form-group mb-3">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="checkbox-signin" checked>
                                            <label class="custom-control-label" for="checkbox-signin">Remember me</label>
                                        </div>
                                    </div>*@

                                @*<div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Login " class="btn btn-success" />
                                        </div>
                                    </div>*@

                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary btn-block" type="submit"> Log In </button>
                                </div>

                            </form>
                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            @*<p class="text-muted"> <a href="pages-register.html" class="text-muted ml-1">Forgot your password?</a></p>*@
                            <p class="text-muted">Don't have an account? <a href="/Account/Register" class="text-dark ml-1"><b>Sign Up</b></a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
}
<!-- end page -->
<!-- App js -->
<script src="js/vendor.min.js"></script>
<script src="js/app.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script src="~/scripts/toastr.js"></script>
<script>
                        $(function () {
                            var a = '@TempData["Success"]';
                            if (a != '')
                                toastr.success("", a);

                            //alert("ab" + a)
                            window.location = '#2249506';
                        })
</script>